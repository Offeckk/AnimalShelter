@model AnimalShelter.Models.Dog

@{ ViewData["Title"] = "Adopt";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var message = TempData["Error"] ?? string.Empty;
}


<script type="text/javascript">
var message = '@message';
if(message)
    alert(message);
</script>



<h1>Adopt</h1>

<h3>Do you agree to adopt this animal?</h3>
<div>
    <h4>Dog</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cleansed)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Cleansed)
            {
                case 0:
                    <p>No</p>
                    break;
                default:
                    <p>Yes</p>
                    break;
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Centre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Centre.Name)
        </dd>
    </dl>

    <form asp-action="Adopt">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Adopt" class="btn btn-warning" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
