@model AnimalShelter.Models.Cat

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cat</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Breed)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Breed)
        </dd>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.IntelligenceCoefficient)*@
            Intelligence Coefficient
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IntelligenceCoefficient)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cleansed)
        </dt>
        <dd class="col-sm-10">
            @switch (Model.Cleansed)
            {
                case 0:
                    <p>No</p>
                    break;
                default:
                    <p>Yes</p>
                    break;
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Centre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Centre.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
